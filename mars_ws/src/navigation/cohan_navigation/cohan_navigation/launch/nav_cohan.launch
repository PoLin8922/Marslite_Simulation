<launch>
  <!-- Arguments -->
  <arg name="map_file" default="shoppingmall.yaml"/>
  <arg name="scene_map_file" default="shoppingmall_scene_v3.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="scan_topic" default="scan"/>

  <!-- Turtlebot3 -->
  <!-- <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include> -->

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(find cohan_navigation)/maps/$(arg map_file)"/>

  <!-- Scene Map server -->
  <node pkg="scene_map_builder" name="scene_map_server" type="scene_map_server" args="$(find scene_map_builder)/maps/$(arg scene_map_file)"/>

  <!-- scan filter -->
  <!-- <include file="$(find laser_filters)/launch/my_laser_filter.launch"/>-->
  
  <!-- AMCL -->
  <include file="$(find cohan_navigation)/launch/amcl.launch">
  	<arg name="scan_topic" value="$(arg scan_topic)" />
  </include>
  
  <!-- move_base -->
  <include file="$(find cohan_navigation)/launch/move_base_cohan.launch"></include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find cohan_navigation)/rviz/cohan_nav_stage.rviz"/>
  </group>
</launch>
